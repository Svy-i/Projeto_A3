import java.util.Scanner;
import java.util.ArrayList;
import java.util.UUID;
class Personagens {
  UUID novoUUID = UUID.randomUUID();
  Scanner entrada = new Scanner(System.in);
  private int Escolha;
  private int idPersonagem = 1;
  private String Nome_Personagem;
  private String Classe;
  private int Vida_Personagem;
  private float Habilidade_Personagem;
  
  private static ArrayList <Personagens> listaPersonagem = new ArrayList<Personagens>();
  public Personagens(){
  }
  
  public Personagens(String Nome_Personagem, String Classe, int Vida_Personagem){
    this.Nome_Personagem = Nome_Personagem;
    this.Classe = Classe;
    this.Vida_Personagem = Vida_Personagem;
  }
  
  public static void escolherPersonagem(){
    Scanner entrada = new Scanner(System.in);
    String Nome_Personagem = "";
    String Classe = "";
    int Vida_Personagem = 0;
    float Habilidade_Personagem;
    int Escolha;
    do{
      System.out.println("Escolha sua classe:");
      System.out.println("Aperte 1 para escolher o Guerreiro");
      System.out.println("Aperte 2 para escolher o Assassino");
      Escolha = entrada.nextInt();
      if (Escolha == 1){
        Nome_Personagem = "Loric";
        Classe = "Guerreiro";
        Vida_Personagem = 100;
      } else if (Escolha == 2){
        Nome_Personagem = "Fey";
        Classe = "Assassino";
        Vida_Personagem = 50;
      } else {
        System.out.println("Escolha inv√°lida. Tente novamente.");
      }
    } while (Escolha != 1 && Escolha != 2);
    Personagens escolhaPersonagem = new Personagens(Nome_Personagem, Classe, Vida_Personagem);
    listaPersonagem.add(escolhaPersonagem);
    System.out.println(Nome_Personagem + "\n" + Classe + "\n" + Vida_Personagem + " pontos de vida");
  }

}
