import java.util.Scanner;
import java.util.ArrayList;
class Personagem {
    Scanner entrada = new Scanner(System.in);
    private int escolha;
    private int idPersonagem = 1;
    private String nomePersonagem;
    private String classe;
    private int vidaPersonagem;
    private int energia;
    private int defesa;

    private ArrayList <Personagem> listaPersonagem = new ArrayList<Personagem>();
    public Personagem(){
    }

    public Personagem(String nomePersonagem, String classe, int vidaPersonagem, int energia, int escolha){
        this.idPersonagem = listaPersonagem.size();
        this.nomePersonagem = nomePersonagem;
        this.classe = classe;
        this.vidaPersonagem = vidaPersonagem;
        this.energia = energia;
        this.escolha = escolha;
    }

    public void escolherPersonagem(){
        do{
            System.out.println("Selecione seu Personagem: ");
            System.out.println("1- Classe: Guerreiro\nNome: Loric\n100 pontos de vida\n\n");
            System.out.println("2- Classe: Assassino\nNome: Fey\n50 pontos de vida\n");
            int escolha = entrada.nextInt();
            if (escolha == 1){
                nomePersonagem = "Loric";
                classe = "Guerreiro";
                vidaPersonagem = 100;
                energia = 3;
            } else if (escolha == 2){
                nomePersonagem = "Fey";
                classe = "Assassino";
                vidaPersonagem = 50;
                energia = 4;
            } else {
                System.out.println("Escolha inv√°lida. Tente novamente.");
            }
        } while (escolha < 1 || escolha > 2);
        Personagem escolhaPersonagem = new Personagem(nomePersonagem, classe, vidaPersonagem, energia, escolha);
        listaPersonagem.add(escolhaPersonagem);
        System.out.println(nomePersonagem + "\n" + classe + "\n" + vidaPersonagem + " pontos de vida");
    }

    public void receberDano(int ataqueInimigo) {
        vidaPersonagem -= ataqueInimigo;
        if (vidaPersonagem < 0) {
            vidaPersonagem = 0;
        }
    }

    public void adicionarDefesa(int defesa) {
        this.defesa += defesa;
        System.out.println("Defesa aumentada para: " + this.defesa);
    }

    public String getNome() {
        return nomePersonagem;
    }

    public int getVida() {
        return vidaPersonagem;
    }

    public int getEnergia(){
        return energia;
    }

    public int getEscolha(){
        return escolha;
    }

    public int getDefesa(){
        return defesa;
    }
}
