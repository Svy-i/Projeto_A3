    System.out.println("\nTipos das Cartas:");
        for (int i = 0; i < 11; i++) {
          int indiceAleatorio = listaCartas.get(i);
          String valorAleatorio = TipoCarta[indiceAleatorio];
          System.out.print(valorAleatorio + " ");
        }
  }
