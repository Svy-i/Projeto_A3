  public static void armazenarNomes(){
    Random random = new Random();
  
    String []  NomeCarta = new String [11];

    NomeCarta[0] = "Corte";
    NomeCarta[1] = "Porrada";
    NomeCarta[2] = "Raiva";
    NomeCarta[3] = "Defender";
    NomeCarta[4] = "Sanguinário";
    NomeCarta[5] = "Voadora";
    NomeCarta[6] = "Separar Alma";
    NomeCarta[7] = "Trance de Batalha";
    NomeCarta[8] = "Flexionar";
    NomeCarta[9] = "Forma Demoníaca";
    NomeCarta[10] = "Escudo de Fogo";
    
    System.out.println("Nomes das Cartas:");
    for (int i = 0; i < 11; i++) {
      int indiceAleatorio = random.nextInt(NomeCarta.length);
      String valorAleatorio = NomeCarta[indiceAleatorio];
      System.out.print(valorAleatorio + " ");
      Cartas escolhaCartas = new Cartas(indiceAleatorio);
      listaCartas.add(escolhaCartas);
        }
    
  }
  public static void armazenarTipos(){
